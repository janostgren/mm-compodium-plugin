{
    "id": "compodium",
    "name": "Compodium",
    "description": "This plugin integrates with a Compodium video meetings server. It enables starting video mettings from Mattermost",
    "homepage_url": "https://github.com/janostgren/mm-compodium-plugin",
    "support_url": "https://github.com/janostgren/mm-compodium-plugin/issues",
    "release_notes_url": "https://github.com/janostgren/mm-compodium-plugin/releases/tag/v0.1.0",
    "icon_path": "assets/starter-template-icon.svg",
    "version": "0.1.1",
    "min_server_version": "7.5.1",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "linux-arm64": "server/dist/plugin-linux-arm64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "To use this plugin you need an account at Compodium. See https://docs.compodium.com/",
        "footer": "",
        "settings": [
            {
                "key": "CompodiumAPIURL",
                "display_name": "Compodium API URL:",
                "type": "text",
                "help_text": "The API URL for a self-hosted private cloud or on-prem Compodium server. For example, https://room.compodium.com",
                "placeholder": "https://room.compodium.com",
                "default": null
            },
            {
                "key": "APIKey",
                "display_name": "API Key:",
                "type": "text",
                "help_text": "The API key generated by Compodium, used to create meetings.",
                "placeholder": "",
                "default": null
            },
            {
                "key": "APISecret",
                "display_name": "API Secret:",
                "type": "text",
                "help_text": "The API secret generated by Compodium, used to create the crypto private key.",
                "placeholder": "",
                "default": null
            },
            {
                "key": "Workspace",
                "display_name": "Workspace:",
                "type": "text",
                "help_text": "The workspace for the meeting",
                "placeholder": "",
                "default": null
            },
            {
                "key": "UserId",
                "display_name": "UserId:",
                "type": "text",
                "help_text": "The user id for the admin user.",
                "placeholder": "",
                "default": null
            }
        ]
    }
}
